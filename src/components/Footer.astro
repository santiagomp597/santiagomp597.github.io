---
import GitHub from "./icons/GitHub.astro";

interface Props {
  translation: string;
}
const { translation } = Astro.props;
---

<footer
  class="opacity-80 m-4 md:pl-0 mt-8 w-full mx-auto container lg:max-w-4xl md:max-w-2xl mb-10 flex justify-center"
>
  <div
    class="flex rounded-lg w-full max-w-screen-xl mx-auto md:flex md:items-center md:justify-between py-4"
  >
    <span
      class="text-sm m-auto text-zinc-800/90 dark:text-zinc-200/90 flex flex-row items-center"
    >
      <GitHub />
      <a
        href="https://github.com/santiagomp597/santiagomp597.github.io"
        target="_blank"
        class="hover:underline mx-1"
      >
        {translation}
      </a>
    </span>
  </div>
</footer>
