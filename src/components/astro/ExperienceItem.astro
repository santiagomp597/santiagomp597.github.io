---
import type { ExperienceItem } from '@/interfaces/translation';
import { Image } from 'astro:assets';
import kargoImage from "../../assets/kargo.png";
import sostereoImage from "../../assets/sostereo.png";
import banlineaImage from "../../assets/banlinea.png";
import itoSoftwareImage from "../../assets/ito-software.png";

const imageMap: Record<string, ImageMetadata> = {
  kargoImage: kargoImage,
  sostereoImage: sostereoImage,
  banlineaImage: banlineaImage,
  itoSoftwareImage: itoSoftwareImage,
};
interface Props extends ExperienceItem {
}

const {
  title,
  company,
  companyDescription,
  jobDescription,
  image,
  imageAlt,
  date,
} = Astro.props;

const getImage = (imgId:string) => {
  return imageMap[imgId];
}
---

<div
  class="relative mx-12 pb-14 grid md:grid-cols-5 md:gap-10 md:space-x-4]"
>
  <div class="relative pb-6 md:col-span-2">
    <div class="sticky top-14">
      <span
        class="text-blue-500 dark:text-green-400 -left-[45px] absolute rounded-full text-5xl"
        >&raquo;
      </span>
      <h3 class="text-2xl font-bold text-blue-500 dark:text-green-400">
        {title}
      </h3>
      <h4 class="font-semibold text-xl text-gray-600 dark:text-white">
        {company}
      </h4>
      <h5 class="font-normal italic text-gray-600 dark:text-white">
        {companyDescription}
      </h5>
      <time class="p-0 m-0 text-sm text-gray-600/80 dark:text-white/80"
        >{date}</time
      >
    </div>
  </div>
  <div
    class="relative flex flex-col gap-2 pb-5 text-gray-600 dark:text-gray-300 md:col-span-3"
  >
    <div class="py-2" set:html={jobDescription}></div>
    <div class="pt-5 shadow-2xl">
      <Image
        class="transition-transform duration-300 ease-in-out hover:scale-105 w-full h-40 md:h-80 object-cover object-top rounded-lg"
        src={getImage(image)}
        alt={imageAlt}
      />
    </div>
  </div>
</div>
