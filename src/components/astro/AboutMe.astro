---
const profileImgAlt = "Santiago M";
import { Image } from "astro:assets";
import ProfileImg from "../../assets/profile-pic.jpg";

interface Props {
  description: string;
}
const { description } = Astro.props;
---

<article
  class="flex flex-col items-center justify-center gap-8 text-gray-700 dark:text-gray-300 md:flex-row mt-5"
>
  <div
    class="[&>p]:mb-4 [&>p>strong]:text-blue-500 dark:[&>p>strong]:text-green-400 [&>p>strong]:font-normal [&>p>strong]:font-mono text-pretty order-2 md:order-1"
    set:html={description}
  />

  <Image
    width="200"
    height="200"
    src={ProfileImg}
    alt={profileImgAlt}
    class="transition-transform duration-300 ease-in-out hover:scale-105 order-1 object-cover w-64 h-full p-1 md:order-2 lg:p-2 lg:w-64 aspect-square rounded-full bg-black/20 dark:bg-yellow-500/5 ring-1 ring-black/70 dark:ring-white/20"
    style="object-position: 50% 50%"
  />
</article>
